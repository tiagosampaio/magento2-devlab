#!/bin/bash
[ -z "$1" ] && echo "Please specify the version to download (ex. 2.0.0)" && exit
#curl -L http://pubfiles.nexcess.net/magento/ce-packages/magento2-$1.tar.gz | tar xzf - -o -C .
# docker-compose exec php /bin/bash -c 'curl -L http://pubfiles.nexcess.net/magento/ce-packages/magento2-$1.tar.gz | tar xzf - -o -C /var/www/html/magento2'

DIR=/var/www/html/magento2
APP_DIR=$DIR/magento2.tar.gz

bin/cli rm -rf $DIR/*
bin/cli rm -rf $DIR/.*

bin/cli curl -L http://pubfiles.nexcess.net/magento/ce-packages/magento2-$1.tar.gz -o $APP_DIR
bin/cli tar -xf $APP_DIR -C $DIR
bin/cli rm -rf $APP_DIR

bin/download-db

bin/cli chown -R www-data: $DIR
